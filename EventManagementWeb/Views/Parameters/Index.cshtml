@model IEnumerable<EventManagementWeb.Models.Parameter>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastChanged)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parameter in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => parameter.Name)
                </td>
                @*<td>@Html.DisplayFor(modelItem => item.Value)</td>*@
                <partial name="_EditPartial" model="parameter" />
                <td>
                    @Html.DisplayFor(modelItem => parameter.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => parameter.Obsolete)
                </td>
            </tr>
        }
    </tbody>
</table>
